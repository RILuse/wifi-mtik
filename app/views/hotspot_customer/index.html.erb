<%provide(:title, "Hotspot пользователи")%>
<div class="container">
  <div class="container-fluid">
    <div class="row"> <ol class="breadcrumb">
      <li><a href="/admin">Административная панель</a></li>
      <li class="active">Hotspot пользователи</li>
    </ol>
      <div class="col-md-12">

        <div class="row">
          <div class="col-md-10">  <h2 class="magin-0">Hotspot пользователи</h2></div>
        </div>
        <hr>

        <table class="table table-striped table-hover table-bordered table-condensed">
          <thead>
          <tr>
            <th>Id</th>
            <th>Login</th>
            <th>Mac</th>
            <th>Router</th>
            <th>Последняя регистрация</th>
            <th>Действие</th>
          </tr>
          </thead>
          <tbody>
          <% @hpc.each do |u|%>

              <tr>
                <th scope="row"><%= u.id%></th>
                <td><%= u.login%></td>
                <td><%= u.mac%></td>
                <td><%= u.router_id%></td>
                <td><%= u.updated_at%></td>

                <td>
                  <a href="/router/<%= u.id %>"><span class="glyphicon glyphicon-share"></span></a>
                </td>

              </tr>

          <%end%>

          </tbody>
        </table>
      </div>
    </div>

  </div>
</div> <!-- /container -->