<div class="container-fluid">
  <div class="row">
    <div class="col-md-offset-4 col-md-4">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <h2 class="">Login</h2>
          <div class="form-group">
    <%= f.label :email,  class: "checkbox" %>
    <%= f.email_field :email,  :class => 'form-control input-lg', autofocus: true %>
          </div>

          <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, :class => 'form-control input-lg', autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
              <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

          <div class="form-group">
    <%= f.submit "Log in", :class=> "btn btn-lg btn-primary btn-block"  %>
          </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>

</div>